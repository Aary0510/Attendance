<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="cfd.ram.attendance.AddCourseDetails">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_course"
            android:text="Enter Course Details"
            android:textSize="30dp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/text_input1"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Course Name"
                android:id="@+id/course_name_input"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/text_input2"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Enter Course Code"
                android:id="@+id/course_code_input"
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timing"
            android:layout_below="@id/text_input1"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="ENTER TIMINGS OF COURSE"
            android:textSize="25dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timing"
            android:id="@+id/contain_timing"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Monday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_1"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Tuesday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_2"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Wednesday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_3"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Thurs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Thursday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_4"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/Fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Friday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_5"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:id="@+id/Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="On Saturday:"
                    android:textSize="20dp"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/start_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Starting"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"/>
                <android.support.design.widget.TextInputEditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ending"
                    android:id="@+id/end_6"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/done_bu"
            android:text="Done"
            android:layout_below="@id/contain_timing"
            android:layout_centerHorizontal="true"
            android:padding="4dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
</ScrollView>